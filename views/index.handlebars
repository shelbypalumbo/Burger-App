<img src="burger.png" alt="burger">

<div class="row">
<div class="burgerDiv col-6">
<h2>Burgers to be Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="burgerDiv col-6">
<h2>Burgers Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>
<div class="row">
  <div class="formDiv col-12">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgerApp">Burger Name:</label>
    <input type="text" id="burgerApp" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">DEVOURED?</label><br>
    <input type="radio" name="devoured" value="1" checked> To be Devoured!<br>
    <input type="radio" name="devoured" value="0"> Devoured!
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
</div>